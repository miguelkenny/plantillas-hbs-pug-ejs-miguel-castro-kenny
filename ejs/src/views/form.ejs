<div class="container border mt-4 shadow">
    <div class="text-center mt-5">
        <p class="display-4">Cargar Productos</p>
    </div>
    <form class="form" action="/productos" method="post">
        <div class="d-grid gap-2 col-6 mx-auto m-2">
            <input class="form-control" type="text" placeholder="Nombre" name="nombre">
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
            <input class="form-control" type="number" placeholder="Precio" name="precio">
        </div>
        <div class="d-grid gap-2 col-6 mx-auto m-2">
            <input class="form-control" type="text" placeholder="Foto URL" name="url">
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-primary btn-lg mt-4">Enviar</button>
        </div>
    </form>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a href="/productos" type="button" class="btn btn-success btn-lg mt-2 mb-5">
            Ver Productos
        </a>
    </div>
     
</div>