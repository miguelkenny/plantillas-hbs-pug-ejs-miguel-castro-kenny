<div class="container border rounded shadow mt-4 p-3">
    <div class="mt-5 text-center">
        <p class="display-5">Lista de Productos</p>
    </div>
    {{#if products}}
        <table class="table table-striped table-info rounded">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ nombre }}</td>
                        <td>${{ precio }}</td>
                        <td><img src={{ url }} alt={{ nombre }} style="width: 50px" /></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="border d-grid gap-2 col-6 mx-auto text-center mt-5">
            <p class="display-5" style="color: red;">No se encontraron productos</p>
        </div>
    {{/if}}
    <div class="d-grid gap-2 col-6 mx-auto mt-4">
        <a href="/" type="button" class="btn btn-primary btn-lg mb-4">
            Volver
        </a>
    </div>
</div>